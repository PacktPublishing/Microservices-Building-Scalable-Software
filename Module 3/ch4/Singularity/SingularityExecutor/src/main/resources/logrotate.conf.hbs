{{#if shouldLogRotateLogFile }}
{{{ logfile }}} {
  dateformat {{{ rotateDateformat }}}{{#if logfileExtension}}.{{{ logfileExtension}}}{{/if}}
  olddir {{{ rotateDirectory }}}
}
{{/if}}

{{#if extrasFiles}}
{{#each extrasFiles}}{{{filename}}} {
  dateformat {{{ dateformat }}}{{#if extension}}.{{{ extension}}}{{/if}}
  missingok
}

{{/each}}
{{/if}}
